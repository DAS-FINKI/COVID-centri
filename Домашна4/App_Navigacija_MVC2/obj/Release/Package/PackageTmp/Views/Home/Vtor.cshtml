
@{
    ViewBag.Title = "Vtor";
}

@{
    if (Session["jazik"] != null)
    {
        Session["jazik"].ToString();
    }
}
<div class="row">
    <div class="col-sm-12">
        @{
            string bakTxt = "";
            if (Session["jazik"] == null || Session["jazik"].ToString() == "mkd")
            {
                bakTxt = "Одјави се";
            }
            else
            {
                bakTxt = "Log out";
            }
        }

        @{
            string abtTxt = "";
            if (Session["jazik"] == null || Session["jazik"].ToString() == "mkd")
            {
                abtTxt = "За нас";
            }
            else
            {
                abtTxt = "About";
            }
        }


        <button class="btn" style="float:left;background-color:lightblue;margin-right:5px" onclick="location.href='@Url.Action("Login", "Account")'">@bakTxt</button>
        <button class="btn" style="float:right;background-color:lightblue" onclick="location.href='@Url.Action("About","Home")'">@abtTxt</button>
    </div>
</div>
<hr />
<div class="row" style="margin-top:150px">
    <div class="col-sm-12 text-center">
        <div style="font-size:50px">
            @{
                string kovTxt = "";
                if (Session["jazik"] == null || Session["jazik"].ToString() == "mkd")
                {
                    kovTxt = "КОВИД-19";
                }
                else
                {
                    kovTxt = "COVID-19";
                }
            }
            <label>@kovTxt</label>
        </div>
        <div style="font-size:30px">
            @{
                string testTxt = "";
                if (Session["jazik"] == null || Session["jazik"].ToString() == "mkd")
                {
                    testTxt = "ТЕСТ ЦЕНТРИ";
                }
                else
                {
                    testTxt = "TEST CENTERS";
                }
            }
            <label>@testTxt</label>
        </div>
        <div style="font-size:25px">
            @{
                string btnTxt = "";
                if (Session["jazik"] == null || Session["jazik"].ToString() == "mkd")
                {
                    btnTxt = "За пребарување на локации на тест центрите притиснете овде";
                }
                else
                {
                    btnTxt = "To search test center locations click here";
                }
            }
            <label>@btnTxt</label>
        </div>
        <div>
            <img src="~/content/images/strelka.png" alt="strelka" width="60" />
        </div>
        <div>
            @{
                string srcTxt = "";
                if (Session["jazik"] == null || Session["jazik"].ToString() == "mkd")
                {
                    srcTxt = "Пребарај";
                }
                else
                {
                    srcTxt = "Search";
                }
            }
            <button class="btn" style="background-color:lightblue" onclick="location.href='@Url.Action("Tret","Home")'">@srcTxt</button>
        </div>
    </div>
</div>
